<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>quickfixj:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>quickfixj:quickfixj-messages-all</include>
			</includes>
			<outputDirectory>/etc</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>**/FIX*.xml</include>
				</includes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${parent.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>LICENSE*</include>
				<include>README*</include>
				<include>lib/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>${groupId}-${version}-src.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${parent.basedir}/quickfixj-core/src/main/resources/config</directory>
			<outputDirectory>/etc</outputDirectory>
			<includes>
				<include>sql/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${parent.basedir}/quickfixj-core/src/main/doc</directory>
			<outputDirectory>/doc</outputDirectory>
			<includes>
				<include>usermanual/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/site/apidocs</directory>
			<outputDirectory>/doc/api</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
